<div class="columns is-centered">
<div class="column is-half"> 

<h1 class="my-5">Users</h1>
    
     
    <% @users.each do |user| %>
     <div class="box">
        <article class="media">
            <div class="media-content">
                <div class="content">
                    <strong><%= user.username %></strong><br/>
                    <strong><%= user.email %></strong><br/>
                </div>
                <% if user_signed_in?%>
                    <nav class="level">
                    <div class="level-left is-mobile">
                            <span class="icon mr-5"><%= link_to 'Show', user %></span>
                        
                            <span class="icon mr-5"><%= link_to 'Edit', edit_user_registration_path(user) %></span>
                       
                            <span class="icon mr-5"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></span>
                      
                    </div>
                    </nav>
                <% end %>
           </div>
        </article>
    </div>  
    <% end %>


<%= link_to 'New User', new_user_registration_path %>
</div>
</div>

